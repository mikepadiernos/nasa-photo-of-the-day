.card-container
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	display flex
	justify-content center
	align-items center
	&:before
		content ''
		background-color rgba(0, 0, 0, 0.5)
		height 100%
		width 100%
		position absolute

	.card
		width 70%
		height auto
		background-color rgba(255,255, 255, 1)
		z-index 1
		padding 20px
